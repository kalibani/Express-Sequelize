<!DOCTYPE html>
<html>
  <%- include partial/head %>
  <body>
    <h1>Teachers Data</h1>
    <a href="/">Back to Home</a>
    <a href="/teacher/add">Add Data Teacher</a>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <%data.forEach( row =>{%>
          <tr>
            <td><%=row.id%></td>
            <td><%=row.first_name%></td>
            <td><%=row.last_name%></td>
            <td><%=row.email%></td>
            <td>
              <% if (row.SubjectId==null) {%>
                unassigned
                <%} else {%>
              <%=row.Subject.subject_name%>
              <%}%>
            </td>
            <td>
              <a href="teacher/edit/<%=row.id%>">Edit</a>
              <a href="teacher/delete/<%=row.id%>">Delete</a>
            </td>
          </tr>
        <% })%>
      </tbody>
    </table>
  </body>
</html>
